</head>
<body>

<p class="flash"><%= flash.notice %></p>

<% if current_user %> 
  <ul> 
    <li><%= link_to current_user.username, user_path(current_user) %></li> 
    <li><%= link_to "Log out", logout_path, method: "delete" %></li> 
  </ul> 
<% else %> 
  <ul> 
    <li><%= link_to "Login", 'login' %></a></li> 
    <li><%= link_to "Signup", 'signup' %></a></li> 
  </ul> 
<% end %>

<%= yield %>

