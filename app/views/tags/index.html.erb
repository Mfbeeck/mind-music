<div class = "all_posts">
	<div class = "header" >
	<br>
		<h1 style = "color: #A5AAAC; padding-left: 13px; font-weight: bold; background-color: white; padding-top: 5px; margin: auto; border-radius: 4px; width: 40%">All Tags</h1>
		<br>
		<br>
	</div>	
	<div class = "container" id = "tags-list">
	  <% @tags.each do |tag| %>
		<% tag_frequency = tag.taggings.count %>
	    
	    <% if !$types_of_posts.include?(tag.name) %>
			<% case tag_frequency%>
				<%when 1..2%>
					<%= link_to tag.name.capitalize, tag_path(tag), class: 'small_tag'  %>
				<%when 3..5%>
					<%= link_to tag.name.capitalize, tag_path(tag), class: 'medium_tag'  %>
				<%when 5..1000%>
					<%= link_to tag.name.capitalize, tag_path(tag), class: 'large_tag'  %>
			<% end %>
			&nbsp;
		<%end%>
			
	  <% end %>
	</div>
</div>
